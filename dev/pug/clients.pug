          | Подробнее
      .special__item
        .specila__img-block
          picture
            source(type="image/webp" media="(min-width: 1024px)" srcset="images/content/special__img2.webp 1x, images/content/special__img2@2x.webp 2x")
            img(src="images/content/special__img2.jpg" srcset="images/content/special__img2@2x.jpg" alt="картинка окна")
